<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    package="com.mbds.android.nfc.code">

    <uses-feature android:name="android.hardware.nfc“ android:required=“true"/>

    <uses-permission android:name= "android.permission.NFC" />

    <uses-feature android:name="android.hardware.nfc.hce“ android:required=“true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".NFCReaderActivity"
            android:label="@string/nfc_read_tag"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.nfc.action.TAG_DISCOVERED"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
         </activity>

        <activity
            android:name=".NFCWriterActivity"
            android:label="@string/nfc_write_ndef"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data android:name="android.nfc.action.TECH_DISCOVERED"
                android:resource="@xml/nfc_tech_ndef" />
        </activity>

        <activity
            android:name=".NDEFPushActivity"
            android:label="@string/nfc_push_ndef"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data android:name="android.nfc.action.TECH_DISCOVERED"
                android:resource="@xml/nfc_tech_ndef" />
        </activity>

        <activity
            android:name=".NFCCardReaderActivity"
            android:label="@string/nfc_card_reader"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data android:name="android.nfc.action.TECH_DISCOVERED"
                android:resource="@xml/nfc_tech_isodep" />
        </activity>

        <activity
            android:name=".SEInternalreaderActivity"
            android:label="@string/nfc_internal_se_reader"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <service
            android:name=".MyAPDUService"
            android:label="@string/hce_service"
            android:permission="android.permission.BIND_NFC_SERVICE"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.nfc.cardemulation.action.HOST_APDU_SERVICE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data
                android:name="android.nfc.cardemulation.host_apdu_service"
                android:resource="@xml/my_host_metadata" />
        </service>

    </application>

    <dist:module dist:instant="true" />

</manifest>